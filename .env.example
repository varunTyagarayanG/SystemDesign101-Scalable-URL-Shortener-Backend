# Example .env file for Scalable URL Shortener Backend

# General
NODE_ENV=development
PORT=8080

MONGO_URI=mongodb://mongo:27017/urlshortener
MONGO_DB=urlshortener

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=urlshortener
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d

RABBITMQ_URL=amqp://rabbitmq:5672

ANALYTICS_QUEUE=analytics_events

KEYGEN_SERVICE_URL=http://key-generator-service:5000

NGINX_HOST=nginx
NGINX_PORT=80

PROMETHEUS_HOST=prometheus
GRAFANA_HOST=grafana

LOG_LEVEL=info
